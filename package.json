{
  "name": "nodejs-api-boilerplate",
  "description": "A NodeJS server boilerplate for help you kickstart you futur node project. ES6/ES7 features.",
  "version": "0.0.0-development",
  "author": "Emanuel Quimper <quimperemanuel@gmail.com> <https://github.com/EQuimper>",
  "repository": {
    "type": "git",
    "url": "https://github.com/EQuimper/nodejs-api-boilerplate"
  },
  "bugs": {
    "url": "https://github.com/EQuimper/nodejs-api-boilerplate/issues"
  },
  "engines": {
    "node": ">= 6.10",
    "npm": ">= 3.10",
    "yarn": ">=0.20.3"
  },
  "main": "./src/index.js",
  "keywords": [
    "express",
    "es6",
    "es7",
    "rest",
    "api",
    "boilerplate",
    "mongo",
    "node",
    "javascript",
    "pm2",
    "babel",
    "nps",
    "commitizen",
    "semantic-release",
    "prettier",
    "lint-staged"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "yarn prettier",
      "git add"
    ]
  },
  "scripts": {
    "build": "nps build.withClean",
    "start": "nps",
    "test": "nps test",
    "test:watch": "nps test.watch",
    "dev": "nps dev",
    "dev:watch": "nps dev.watch",
    "dev:debug": "nps dev.debug",
    "prettier": "node ./scripts/prettier.js write",
    "precommit": "nps lintStaged && nps validate",
    "commit": "nps commit",
    "release": "nps release",
    "checkCover": "nps test.checkCover",
    "cover": "nps test.cover",
    "db:seeds-user": "nps db.seedsUser",
    "db:seeds-clear": "nps db.seedsClearUser",
    "db:seeds-clear-user": "nps db.seedsClear",
    "lint": "nps lint",
    "lint:fix": "nps lint.fix",
    "reportCoverage": "nps reportCoverage"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "babel-register": "^6.24.1",
    "chai": "^3.5.0",
    "chalk": "^1.1.3",
    "commitizen": "^2.9.6",
    "coveralls": "^2.13.1",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^3.19.0",
    "eslint-config-equimper": "^1.6.4",
    "eslint-config-prettier": "^1.7.0",
    "faker": "^4.1.0",
    "glob": "^7.1.1",
    "istanbul": "1.1.0-alpha.1",
    "lint-staged": "^3.4.1",
    "mocha": "^3.3.0",
    "morgan": "^1.8.1",
    "nodemon": "^1.11.0",
    "nps": "^5.1.0",
    "nps-utils": "^1.2.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.3.0",
    "semantic-release": "^6.3.2",
    "shelljs": "^0.7.7",
    "superagent": "^3.5.2",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.17.1",
    "compression": "^1.6.2",
    "cors": "^2.8.3",
    "dotenv": "^4.0.0",
    "express": "^4.15.2",
    "express-status-monitor": "^0.1.9",
    "express-validation": "^1.0.2",
    "express-winston": "^2.4.0",
    "helmet": "^3.5.0",
    "http-status": "^1.0.1",
    "joi": "^10.4.1",
    "jsonwebtoken": "^7.4.0",
    "method-override": "^2.3.8",
    "mongoose": "^4.9.7",
    "mongoose-unique-validator": "^1.0.5",
    "passport": "^0.3.2",
    "passport-jwt": "^2.2.1",
    "passport-local": "^1.0.0",
    "pm2": "^2.4.6",
    "pretty-error": "^2.1.0",
    "raven": "^1.2.1",
    "slug": "^0.9.1",
    "winston": "^2.3.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
